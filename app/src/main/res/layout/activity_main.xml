<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_hint" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sex"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/sex_list"
            android:prompt="@string/spn_sex_list_promt"
            android:spinnerMode="dialog" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtGrpAge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="@string/age_hint" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/birth"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spnBirthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/year_list"
            android:prompt="@string/spn_year_list_promt"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/txtBirthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth_year"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnBirthMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/month_list"
            android:prompt="@string/spn_month_list_promt"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/txtBirthMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth_month"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnBirthDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/day_list"
            android:prompt="@string/spn_day_list_promt"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/txtBirthDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth_day"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spnBirthHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/hour_list"
            android:prompt="@string/spn_hour_list_promt"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/txtBirthHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth_hour"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnBirthMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/min_list"
            android:prompt="@string/spn_min_list_promt"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/txtBirthMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birth_min"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtHobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hobbies"
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/scvHabitList"
        style="@android:style/Widget.DeviceDefault.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@android:color/darker_gray"
        android:clipToPadding="false"
        android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:orientation="vertical">


            <CheckBox
                android:id="@+id/chkHabit_Music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/music" />

            <CheckBox
                android:id="@+id/chkHabit_Sing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sing" />

            <CheckBox
                android:id="@+id/chkHabit_Dance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dance" />

            <CheckBox
                android:id="@+id/chkHabit_Travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/travel" />

            <CheckBox
                android:id="@+id/chkHabit_Reading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reading" />

            <CheckBox
                android:id="@+id/chkHabit_Writing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/writing" />

            <CheckBox
                android:id="@+id/chkHabit_Climbing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/climbing" />

            <CheckBox
                android:id="@+id/chkHabit_Swim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/swim" />

            <CheckBox
                android:id="@+id/chkHabit_Eating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eating" />

            <CheckBox
                android:id="@+id/chkHabit_Drawing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drawing" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_score"
        app:layout_constraintBottom_toBottomOf="@+id/btn_draw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@+id/btn_draw"
        app:layout_constraintTop_toTopOf="@+id/btn_draw" />

    <TextView
        android:id="@+id/txtEmpty2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/the_advertising" />



</LinearLayout>